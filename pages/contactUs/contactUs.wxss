@import "../templates/templates.wxss";

.about-head{
   height: 400rpx;
}
.about-head image{
  width:100%;
  height: 100%;
}

.about-list-item{
border-bottom:1rpx solid gray;
overflow:auto
}
.iconbox{
  margin-left: 20rpx;
  width:20%;
  height: 80%;
  float: left;
}
.textbox image{
  position: relative;
  left: -30rpx;
  height: 64rpx;
  width:64rpx;
  top:15rpx;
}
.textbox{
    width:60%;
    height:100rpx;
    border: 1px solid #ccc ;
    margin: 10rpx 30rpx;
    padding: 5rpx;
    border-radius: 16px ;
    text-align: center;
    float:right;
}

.item-text{
  line-height:120rpx;
  margin-left: 20rpx
}
.itemclick{
  background-color: #1afa29;
}

