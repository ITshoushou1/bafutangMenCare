/* pages/feedBack/feedBack.wxss */

@import "../templates/templates.wxss";

.slide-bar {
    color: #353535;
    text-align: center;
    border: 1px solid #cccccc;
    white-space: nowrap; 
    position: fixed;
    z-index: 500;
    top: 0;
    left: 0;
    width: 100%;
    height: 108rpx;
    background-color: black;
    opacity: 0.7

}
.slide-bar view{
    width:50%;
    background-color: black;
    line-height: 100rpx;
    font-size: 30rpx;
    color: white;
    display: inline-block;
    border-left: 1px solid #cccccc;
}
.slide-bar view.slide-bar-cur{
   
    border-bottom: 8rpx solid green;
     background-color: black;
     opacity: 0.6;
}

.right-container{
    height:100%;
    text-align:center;
    left:0;
    width:100%;
 
}
.right-container image{
  height:100%;
}
.feedback-box{
    background-color:rgb(45,45,45);
    height:180px;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    width:90%;
    margin:108rpx auto 0 auto;
    font-size:30rpx;
    color:white;
    text-align: left;
    padding: 10rpx;
    font-weight:100;
    opacity: 0.7
}
.feedback-img{
  width:92.5%;
}

